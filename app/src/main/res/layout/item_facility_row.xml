<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_loc_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_size_57"
        android:background="@color/color_f"
        android:gravity="center"
        android:paddingStart="@dimen/margin_size_15"
        android:text="设施名称"
        android:textColor="@color/color_9"
        android:textSize="@dimen/text_size_18" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_57"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/tv_loc_name"
        android:background="@color/color_f"
        android:gravity="end|center_vertical"
        android:hint="请输入"
        android:paddingEnd="@dimen/margin_size_20"
        android:textColor="@color/color_3"
        android:textSize="@dimen/text_size_18" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_1"
        android:layout_below="@id/et_name"
        android:layout_marginStart="@dimen/margin_size_10"
        android:layout_marginEnd="@dimen/margin_size_10"
        android:background="@color/col_e6" />
</RelativeLayout>
