<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f"
    android:orientation="vertical"
    tools:context=".ui.activity.household.PostDetailsCommunityActivity">

    <include layout="@layout/base_title_bar" />

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/margin_size_55"
            android:layout_height="@dimen/margin_size_55"
            android:layout_margin="@dimen/margin_size_15"
            android:src="@mipmap/icon_avatar"
            app:riv_corner_radius="@dimen/margin_size_50" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_15"
            android:layout_toEndOf="@id/iv_avatar"
            android:text=""
            android:textColor="@color/color_3"
            android:textSize="@dimen/text_size_20" />

        <TextView
            android:id="@+id/tv_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_avatar"
            android:layout_toEndOf="@id/iv_avatar"
            android:text=""
            android:textColor="@color/color_9"
            android:textSize="@dimen/text_size_16" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_audit_tag"
        style="@style/C66S14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/gray_01"
        android:gravity="center"
        android:text="@string/search" />

    <TextView
        android:id="@+id/tv_mTitle"
        style="@style/C33S18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_content"
        style="@style/C33S18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="14dp"
        android:lineSpacingMultiplier="1.2" />

    <TextView
        android:id="@+id/tv_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_size_10"
        android:drawableEnd="@mipmap/arrow_right"
        android:layout_marginStart="15dp"
        android:drawablePadding="@dimen/margin_size_5"
        android:text="查看链接"
        android:textColor="@color/col_02"
        android:textSize="@dimen/text_size_18"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/imgList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="@dimen/margin_size_15"
        android:overScrollMode="never" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f6" />
</LinearLayout>