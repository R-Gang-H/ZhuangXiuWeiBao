<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f">

    <include
        android:id="@+id/inc_bar"
        layout="@layout/base_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footView"
        android:layout_below="@id/inc_bar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inc_bar"
            android:layout_marginStart="@dimen/margin_size_13"
            android:layout_marginTop="@dimen/margin_size_12"
            android:layout_marginEnd="@dimen/margin_size_13"
            android:gravity="center_vertical"
            android:text="已为您安排服务人员"
            android:textColor="@color/color_2"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/lin_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_text"
            android:layout_marginTop="@dimen/margin_size_10"
            android:orientation="horizontal"
            android:padding="@dimen/margin_size_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_size_5"
                android:drawableStart="@mipmap/icon_maintain"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="维保服务"
                android:textColor="@color/color_9"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_size_10"
                android:layout_marginEnd="@dimen/margin_size_10"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:text=""
                android:textColor="@color/color_9"
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contentView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/shape_handler_bg"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvContent"
                style="@style/C33S18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_size_20"
                android:layout_marginTop="@dimen/margin_size_15"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="15dp"
                android:lineSpacingMultiplier="1.2" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_work_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin_time"
            android:layout_margin="15dp"
            android:visibility="gone"
            android:background="@drawable/shape_handler_bg">


            <TextView
                android:id="@+id/tv_work"
                android:layout_width="@dimen/margin_size_75"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_size_20"
                android:layout_marginTop="@dimen/margin_size_15"
                android:layout_marginEnd="@dimen/margin_size_25"
                android:text="维保人员"
                android:textColor="@color/color_9"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/tv_worker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_15"
                android:layout_toEndOf="@id/tv_work"
                android:text=""
                android:textColor="@color/color_3"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="@dimen/margin_size_75"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_work"
                android:layout_marginStart="@dimen/margin_size_20"
                android:layout_marginTop="@dimen/margin_size_15"
                android:layout_marginEnd="@dimen/margin_size_25"
                android:text="联系电话"
                android:textColor="@color/color_9"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/tv_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_worker"
                android:layout_marginTop="@dimen/margin_size_15"
                android:layout_toEndOf="@id/tv_phone"
                android:text=""
                android:textColor="@color/color_3"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/tv_up_time"
                android:layout_width="@dimen/margin_size_75"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_phone"
                android:layout_marginStart="@dimen/margin_size_20"
                android:layout_marginTop="@dimen/margin_size_15"
                android:layout_marginEnd="@dimen/margin_size_25"
                android:layout_marginBottom="@dimen/margin_size_15"
                android:text="上门时间"
                android:textColor="@color/color_9"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/tv_work_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_mobile"
                android:layout_marginTop="@dimen/margin_size_15"
                android:layout_toEndOf="@id/tv_up_time"
                android:text=""
                android:textColor="@color/color_3"
                android:textSize="@dimen/text_size_18" />

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_order_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_work_info"
            android:layout_marginStart="@dimen/margin_size_15"
            android:layout_marginEnd="@dimen/margin_size_15"
            android:drawableStart="@mipmap/icon_attch"
            android:drawablePadding="@dimen/margin_size_8"
            android:text="维保订单100009001"
            android:visibility="gone"
            android:textColor="@color/col_02"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/footView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/margin_size_10"
        android:layout_marginEnd="@dimen/margin_size_10"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:background="@mipmap/ic_green_bg_02"
            android:gravity="center"
            android:text="取消服务"
            android:textColor="@color/col_02"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/tv_change_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/bg_cancel"
            android:gravity="center"
            android:text="修改上门时间"
            android:textColor="@color/col_02"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_weight="1"
            android:background="@drawable/bg_rect_g_c50"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/color_f"
            android:textSize="@dimen/text_size_18" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/FeaturesView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/btnLeft"
            style="@style/C02S18"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="-5dp"
            android:layout_weight="1"
            android:background="@mipmap/bg_cancel"
            android:gravity="center"
            android:text="申请售后" />

        <TextView
            android:id="@+id/btnRight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-5dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@mipmap/bg_bt_left"
            android:gravity="center"
            android:text="去评价"
            android:textColor="@color/color_f"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>

    <TextView
        android:id="@+id/btnAfterSaleOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/ic_login_btn_bg"
        android:gravity="center"
        android:text="查看售后详情"
        android:textColor="@color/color_f"
        android:textSize="@dimen/text_size_18"
        android:visibility="gone" />

</RelativeLayout>