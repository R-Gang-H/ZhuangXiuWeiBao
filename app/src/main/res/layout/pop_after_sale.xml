<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent40">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_rect_c20_f"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_45">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="申请原因"
                android:textColor="@color/color_3"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="@dimen/margin_size_45"
                android:layout_height="@dimen/margin_size_45"
                android:layout_alignParentEnd="true"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_close" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="@dimen/margin_size_25"
            android:background="@color/col_e6" />

        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@+id/xre_list"
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_size_5"
            android:background="@mipmap/ic_login_btn_bg"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color_f"
            android:textSize="@dimen/text_size_18" />

    </LinearLayout>

</RelativeLayout>