<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f">

    <TextView
        android:id="@+id/tv_text1"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="70dp"
        android:gravity="center_vertical"
        android:text="您还没有登录"
        android:textColor="@color/color_3"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_text2"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_below="@+id/tv_text1"
        android:layout_alignStart="@+id/tv_text1"
        android:gravity="center_vertical"
        android:text="请登录后查看您的小区住房信息"
        android:textColor="@color/color_9"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_mobile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_text2"
        android:layout_marginStart="25dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/tv_code"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="请输入手机号"
        android:inputType="number"
        android:maxLength="11"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/color_3"
        android:textColorHint="@color/color_c3"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/et_mobile"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:gravity="center_vertical"
        android:text="获取验证码"
        android:textColor="@color/color_9"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/et_mobile"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/col_e6" />

    <EditText
        android:id="@+id/et_code"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/et_mobile"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/tv_code"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="请输入验证码"
        android:inputType="number"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/color_3"
        android:textColorHint="@color/color_c3"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/et_code"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/col_e6" />

    <TextView
        android:id="@+id/tv_pact"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/et_code"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:text="@string/pact"
        android:textColor="@color/color_9"
        android:textSize="14sp"
        android:focusable="true" />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:background="@mipmap/ic_login_btn_bg"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/color_f"
        android:textSize="18sp" />

</RelativeLayout>