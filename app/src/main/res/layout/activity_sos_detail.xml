<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    tools:context=".ui.activity.SosDetailActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_outer_y"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_size_90"
        app:cardBackgroundColor="@color/color_f9f"
        app:cardCornerRadius="135dp"
        app:cardElevation="0dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_outer_l"
            android:layout_width="204dp"
            android:layout_height="204dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/color_f"
            app:cardCornerRadius="102dp"
            app:cardElevation="@dimen/margin_size_1">

            <TextView
                android:id="@+id/tv_sos_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="10"
                android:textColor="@color/col_02"
                android:textSize="@dimen/margin_size_100" />

            <TextView
                android:id="@+id/tv_sos_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="01:59"
                android:textColor="@color/col_02"
                android:textSize="@dimen/margin_size_65"
                android:visibility="gone" />

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_sos_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv_outer_y"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_size_45"
        android:text="正通知您的紧急联络人和社区负责人"
        android:textColor="@color/color_3"
        android:textSize="@dimen/margin_size_18" />

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_size_5"
        android:layout_marginBottom="@dimen/margin_size_40"
        android:background="@mipmap/ic_login_btn_bg"
        android:gravity="center"
        android:text="取消呼叫"
        android:textColor="@color/color_f"
        android:textSize="@dimen/text_size_18" />

</RelativeLayout>