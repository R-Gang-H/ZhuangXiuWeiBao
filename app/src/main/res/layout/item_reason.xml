<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/color_f6"
        android:layout_marginBottom="@dimen/margin_size_15"
        android:layout_marginStart="@dimen/margin_size_15"
        android:layout_marginEnd="@dimen/margin_size_15"
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <TextView
            android:id="@+id/tv_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@mipmap/icon_rect_select"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/margin_size_15"
            android:paddingEnd="@dimen/margin_size_20"
            android:text=""
            android:textColor="@color/color_3"
            android:textSize="@dimen/text_size_18" />
    </RelativeLayout>

</LinearLayout>