<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_size_15">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_79"
        android:layout_marginStart="@dimen/margin_size_15"
        android:layout_marginEnd="@dimen/margin_size_15"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/margin_size_5"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingEnd="35dp"
                android:src="@mipmap/icon_select"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:src="@mipmap/icon_building" />

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="我是住户,也是户主"
                android:textColor="@color/color_3"
                android:textSize="18sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_79"
        android:layout_marginStart="@dimen/margin_size_15"
        android:layout_marginEnd="@dimen/margin_size_15"
        android:background="@drawable/bg_rect_c4_30bd_line"
        android:visibility="gone" />

</RelativeLayout>