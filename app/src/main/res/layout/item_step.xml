<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/margin_size_25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_index"
            android:text=""
            android:textColor="@color/color_f"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginStart="@dimen/margin_size_20"
            android:layout_marginEnd="@dimen/margin_size_10"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/margin_size_3"
            android:background="@mipmap/icon_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_text"
            android:text=""
            android:textSize="18sp"
            android:textColor="@color/color_3"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/margin_size_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>