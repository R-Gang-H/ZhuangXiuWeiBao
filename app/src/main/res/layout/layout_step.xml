<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_size_55"
    android:layout_below="@id/toolbar"
    android:background="@color/color_f6"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_size_15"
        android:text="第"
        android:textColor="@color/color_3"
        android:textSize="@dimen/text_size_18" />

    <TextView
        android:id="@+id/tv_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_circle"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/color_f"
        android:textSize="@dimen/text_size_18" />

    <TextView
        android:id="@+id/tv_step_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="步,请把您的需求描述更具体一点"
        android:textColor="@color/color_3"
        android:textSize="@dimen/text_size_18" />

</LinearLayout>
