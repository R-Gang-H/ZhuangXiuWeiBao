<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_size_10"
    android:layout_marginBottom="@dimen/margin_size_10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingStart="@dimen/margin_size_5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项目名称"
            android:textColor="@color/color_3"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:id="@+id/img_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_10"
            android:layout_marginStart="@dimen/margin_size_30"
            android:background="@mipmap/ic_arraw_dis"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_exec_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_size_5"
        android:layout_weight="1.5"
        android:text="执行人\t:\t李四"
        android:textColor="@color/color_9"
        android:textSize="@dimen/text_size_18" />

</LinearLayout>
