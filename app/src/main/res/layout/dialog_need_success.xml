<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/margin_size_35"
        android:layout_marginEnd="@dimen/margin_size_35"
        android:background="@drawable/shape_shadow_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_size_40"
            android:src="@mipmap/icon_check_success" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_size_12"
            android:text="需求提交成功"
            android:textColor="@color/color_3"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/tv_relapse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_size_27"
            android:background="@mipmap/ic_side_btn_bg"
            android:gravity="center"
            android:text="再发一条新需求"
            android:textColor="@color/col_02"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/tv_go_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_size_10"
            android:layout_marginBottom="@dimen/margin_size_20"
            android:background="@mipmap/ic_long_btn_bg"
            android:gravity="center"
            android:text="去主页"
            android:textColor="@color/color_f"
            android:textSize="@dimen/text_size_18" />

    </LinearLayout>

</RelativeLayout>