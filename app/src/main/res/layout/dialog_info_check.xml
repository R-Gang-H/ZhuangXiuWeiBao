<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/margin_size_35"
        android:layout_marginEnd="@dimen/margin_size_35"
        android:background="@drawable/shape_shadow_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_size_30"
            android:src="@mipmap/icon_check_success" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_size_12"
            android:layout_marginBottom="@dimen/margin_size_17"
            android:text="信息核验成功"
            android:textColor="@color/color_3"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/tv_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="正在初始化APP主界面，请等待…"
            android:textColor="@color/color_3"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_go"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_size_17"
            android:layout_marginBottom="14dp"
            android:background="@mipmap/bg_bt_left"
            android:gravity="center"
            android:text="去首页"
            android:textColor="@color/color_f"
            android:textSize="@dimen/text_size_18" />

    </LinearLayout>

</RelativeLayout>